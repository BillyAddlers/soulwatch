{
	"compilerOptions": {
        // Basic Config
		"target": "ES2021",
		"module": "ES2022",
		"lib": ["ES2021"],

        // Strict
		"strict": true,

        // Module Resolution Options
        "moduleResolution": "node",
		"esModuleInterop": true,

        // Advanced Config
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": false,
		"noEmitHelpers": true,
		"importHelpers": true,
		"resolveJsonModule": true
	}
}
